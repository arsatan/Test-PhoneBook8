<UserControl x:Class="PhoneBook.UserControlFindByPhone"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="107" Width="252">
    <Grid RenderTransformOrigin="0.505,0.868" Height="290" VerticalAlignment="Top" Background="AliceBlue">
        <StackPanel Margin="0,0,0,175" Height="100" Background="AliceBlue">
            <TextBlock Text="Поиск по номеру телефона" Margin="5" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBox Text="" Name="PhoneNumber" Width="222" Margin="10"/>
            <WrapPanel HorizontalAlignment="Right">
                <Button Content="Поиск" Name="FindButton" Width="60" Margin="5" Click="OKButton_Click"/>
                <Button Content="Отмена" Name="CancelButton" Click="CancelButton_Click" Width="60" IsCancel="True" Margin ="5" Height="20" RenderTransformOrigin="1.385,-0.627">
                </Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
